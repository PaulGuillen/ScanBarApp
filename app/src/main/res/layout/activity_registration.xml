<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Vista.RegistrationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        app:cardCornerRadius="30dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:ignore="UseCompoundDrawables">

            <ImageButton
                android:id="@+id/back_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_baseline_arrow_back_24_black"
                android:contentDescription="@string/todo"
                android:foregroundGravity="left"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

            <ImageView
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:background="@drawable/imagen_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_marginTop="30dp"
                android:text="@string/pesta_a_registro"
                android:fontFamily="@font/klee_regular"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_margin="20dp"
                android:id="@+id/username"
                android:drawableStart="@drawable/username_image"
                android:textSize="17sp"
                android:textStyle="normal"
                android:drawablePadding="8dp"
                android:fontFamily="@font/klee_regular"
                android:hint="@string/usuario"
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:autofillHints="none" />


            <EditText
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/password"
                android:drawableStart="@drawable/lock_image"
                android:textSize="17sp"
                android:textStyle="normal"
                android:drawablePadding="8dp"
                android:fontFamily="@font/klee_regular"
                android:hint="@string/contrase_a"
                android:background="@drawable/edittext_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:autofillHints="none" />


            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/btn_logout"
                android:fontFamily="@font/klee_regular"
                android:text="@string/registrarse"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="TextContrastCheck" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                tools:ignore="UselessLeaf">

                <ImageView
                    android:background="@drawable/ic_baseline_error_outline_24"
                    android:layout_width="0dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.0750"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_margin="10dp"
                    android:fontFamily="@font/muli"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="Usar tus credenciales de autenticación facilitarán el acceso a nuestras distintas plataformas."
                    android:layout_width="0dp"
                    android:textSize="13sp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>